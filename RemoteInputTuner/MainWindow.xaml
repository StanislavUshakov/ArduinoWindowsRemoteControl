<Window x:Class="RemoteInputTuner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Remote Input Tuner" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Select Serial Port:" HorizontalAlignment="Left" Margin="10,10,0,14" VerticalAlignment="Center" FontSize="14"/>
        <ComboBox Grid.Row="0" HorizontalAlignment="Left" Margin="137,14,0,14" VerticalAlignment="Center" Width="159" Name="cbPort"
                  ItemsSource="{Binding Path=SerialPorts}" DisplayMemberPath="Name" SelectedValuePath="Name" SelectedItem="{Binding Path=CurrentSerialPort, Mode=TwoWay}" SelectedIndex="0" />
        <Button Grid.Row="0" Content="Connect" HorizontalAlignment="Left" Margin="390,14,0,14" VerticalAlignment="Center" Width="105" Name="btConnect" Click="ConnectButton_Click"/>


    </Grid>
</Window>
